<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddCustomer" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="288dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:background="@drawable/action_bar_style"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_back"
                android:backgroundTint="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:text="Input your profile"
                android:textColor="#fff"
                android:textSize="14pt" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="381dp"
            android:layout_height="92dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="300px">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hi!"
                android:textColor="#000"
                android:textSize="10pt"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="40dp"
                android:text="Please input your data profile"
                android:textColor="#000"
                android:textSize="10pt"
                android:textStyle="bold" />


        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/categories_box_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/profile_box_style">

            <ImageView
                android:id="@+id/addImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/nav"
                />



            <EditText
                android:id="@+id/inputName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/image_style"
                android:hint="Name"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />

            <EditText
                android:id="@+id/inputAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/image_style"
                android:hint="Address"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />

            <EditText
                android:id="@+id/inputPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="number"
                android:background="@drawable/image_style"
                android:hint="Phone Number"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />

            <EditText
                android:id="@+id/inputCitizenNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="number"
                android:background="@drawable/image_style"
                android:hint="Citizen Number"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />

            <EditText
                android:id="@+id/inputMotor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/image_style"
                android:hint="Motor"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
            <EditText
                android:id="@+id/inputRent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:layout_marginLeft="150dp"
                android:ems="10"
                android:inputType="number"
                android:background="@drawable/image_style"
                android:hint="Rent Time(Day)"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />


        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/profile_box_style"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="250dp"
        android:text="Submit"
        android:textColor="#fff"
        />


</FrameLayout>