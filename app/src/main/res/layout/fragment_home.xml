<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/nav_1"
        android:layout_width="match_parent"
        android:layout_height="232dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:background="@drawable/action_bar_style"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/image_nav"
                android:layout_width="200px"
                android:layout_height="150px"
                android:background="@drawable/nav"
                android:rotation="-20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="250px"
                android:gravity="center"
                android:text="Hello!"
                android:textColor="#fff"
                android:textSize="16pt" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_welcome"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/welcome_box_style">

            <TextView
                android:id="@+id/text_welcome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:gravity=""
                android:text="Welcome To HokiRental"
                android:textColor="#fff"
                android:textSize="12pt" />

            <View
                android:layout_width="312dp"
                android:layout_height="1dp"
                android:layout_below="@id/text_welcome"
                android:layout_marginLeft="12dp"
                android:background="#fff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/text_welcome"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15px"
                android:text="Your key to rent a motorcycle"
                android:textColor="#fff"
                android:textSize="8pt" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/layout_welcome"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:gravity=""
            android:text="Categories"
            android:textColor="#000"
            android:textSize="11pt"
            android:textStyle="bold" />

    </RelativeLayout>

<!--    Bagian Categories-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/categories_box_style">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/image_style"
                    android:scaleType="centerInside"
                    android:src="@drawable/motorcycle" />

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Matic"
                        android:textColor="#000"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="30dp"
                        android:background="#fff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="40dp"
                        android:text="- Beat"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="55dp"
                        android:text="- Vario"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="70dp"
                        android:text="- Scoopy"
                        android:textColor="#000"
                        android:textStyle="bold" />
                    <!--                    ini konten teks disebelah gambar, inget yang imageview, src nya lu ganti-->
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <RelativeLayout
                    android:layout_width="113dp"
                    android:layout_height="100dp"
                    android:layout_weight="0"
                    android:layout_marginLeft="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Sport"
                        android:textColor="#000"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="30dp"
                        android:background="#fff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="40dp"
                        android:text="- R25"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="55dp"
                        android:text="- Verza"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="70dp"
                        android:text="- Vixion"
                        android:textColor="#000"
                        android:textStyle="bold" />
                    <!--                    ini konten teks disebelah gambar, inget yang imageview, src nya lu ganti-->
                </RelativeLayout>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/image_style"
                    android:src="@drawable/m1"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/image_style"
                    android:src="@drawable/m2" />

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="50dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="Trail"
                        android:textColor="#000"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="80dp"
                        android:layout_height="2dp"
                        android:layout_marginTop="30dp"
                        android:background="#fff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="40dp"
                        android:text="- DTracker"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="55dp"
                        android:text="- KLX"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="70dp"
                        android:text="- KTM"
                        android:textColor="#000"
                        android:textStyle="bold" />
                    <!--                    ini konten teks disebelah gambar, inget yang imageview, src nya lu ganti-->
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">


                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_weight="2"
                    android:layout_marginLeft="200dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/cat_details"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:background="@drawable/profile_box_style"
                        android:text="See Details"
                        android:textColor="#fff"
                        android:textStyle="normal"/>
                    <!--                    ini konten teks disebelah gambar, inget yang imageview, src nya lu ganti-->
                </RelativeLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</FrameLayout>